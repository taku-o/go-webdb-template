        # sharding 8: テーブル _028-031（4テーブル）→ sharding4
        - id: 8
          driver: postgres
          host: prod-db-sharding4.example.com
          port: 5432
          name: app_db_sharding4
          user: prod_user
          password: ${DB_PASSWORD_SHARDING4}  # 環境変数から読み込み
