          reader_policy: round_robin
          max_connections: 50
          max_idle_connections: 20
          connection_max_lifetime: 600s
          table_range: [12, 15]
        # sharding 5: テーブル _016-019（4テーブル）→ sharding3
        - id: 5
          driver: postgres
