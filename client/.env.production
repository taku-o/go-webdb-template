# 本番環境用環境変数
# このファイルは本番環境（npm run build && npm start）でのみ読み込まれます
NEXT_PUBLIC_API_KEY=

# NEXT_PUBLIC_API_BASE_URL: GoサーバーのベースURL
NEXT_PUBLIC_API_BASE_URL=https://api.example.com

# APP_BASE_URL: アプリケーションのベースURL（v4で名称変更）
APP_BASE_URL=https://example.com

# Auth0設定（本番環境用、v4）
# AUTH0_SECRET: セッション暗号化用の秘密鍵（必須）
# 環境変数として設定してください: export AUTH0_SECRET=your-secret-key
AUTH0_SECRET=

# AUTH0_DOMAIN: Auth0のドメイン（スキームなし、v4で名称変更）
# 例: prod-domain.auth0.com
AUTH0_DOMAIN=prod-domain.auth0.com

# AUTH0_CLIENT_ID: Client ID（本番環境用）
AUTH0_CLIENT_ID=prod-client-id

# AUTH0_CLIENT_SECRET: Client Secret（機密情報）
# 注意: このファイルに直接記載せず、環境変数として設定してください
# 設定方法: export AUTH0_CLIENT_SECRET=your-client-secret
# CI/CD環境では、シークレット管理システム（GitHub Secrets等）を使用
AUTH0_CLIENT_SECRET=

# AUTH0_AUDIENCE: Application API Idetifier
AUTH0_AUDIENCE=https://go-webdb-template/api

# AUTH0_SCOPE: 認証スコープ（offline_accessでリフレッシュトークンを取得）
AUTH0_SCOPE='openid profile email offline_access'

# E2Eテスト用のAuth0認証情報
TEST_AUTH0_USERNAME=
TEST_AUTH0_PASSWORD=
